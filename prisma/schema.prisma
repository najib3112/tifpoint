generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String      @id @default(cuid())
  username    String      @unique
  email       String      @unique
  password    String
  nim         String?     
  name        String      
  role        Role        @default(MAHASISWA)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  submissions Submission[]
  
  @@unique([nim])
}

enum Role {
  MAHASISWA
  ADMIN
}

model Submission {
  id             String           @id @default(cuid())
  title          String
  description    String?
  activityType   ActivityType
  competencyPath CompetencyPath?  
  evidenceUrl    String           
  publicId       String?          
  points         Int?             
  status         SubmissionStatus @default(PENDING)
  adminComment   String?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  userId         String
  user           User             @relation(fields: [userId], references: [id])
}

enum ActivityType {
  SEMINAR
  KURSUS
  PROGRAM
  RISET
  PRESTASI
}

enum CompetencyPath {
  SOFTWARE_DEVELOPER
  NETWORK_TECH
  AI
  SOFTSKILLS
}

enum SubmissionStatus {
  PENDING
  APPROVED
  REJECTED
}

model RecognizedCourse {
  id          String   @id @default(cuid())
  name        String
  provider    String
  duration    Int      
  pointValue  Int
  url         String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Event {
  id          String    @id @default(cuid())
  title       String
  description String
  date        DateTime
  location    String?
  pointValue  Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}